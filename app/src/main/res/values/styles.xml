<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/actionbar_bg</item>
        <item name="actionBarItemBackground">@android:color/white</item>
        <item name="android:statusBarColor">@color/actionbar_bg</item>
    </style>

    <style name="SplashScreenStyle" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/actionbar_bg</item>
        <item name="actionBarItemBackground">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <style name="ActionBarTitleStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18dip</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionBarSubtitleStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14dip</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16dip</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
