<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/min_categories_home_item_height"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/item_view_left"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="@dimen/min_categories_home_item_height">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_newest_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fresco:fadeDuration="1000"
            fresco:placeholderImage="@drawable/default_image"
            fresco:progressBarImage="@drawable/loading_icon" />

        <TextView
            android:id="@+id/newest_title_left"
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:layout_gravity="bottom"
            android:background="@color/black_alpha"
            android:gravity="center_vertical|right"
            android:textColor="@android:color/darker_gray"
            android:textSize="12dip" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/item_view_right"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="@dimen/min_categories_home_item_height">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_newest_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fresco:fadeDuration="1000"
            fresco:placeholderImage="@drawable/default_image"
            fresco:progressBarImage="@drawable/loading_icon" />

        <TextView
            android:id="@+id/newest_title_right"
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:layout_gravity="bottom"
            android:background="@color/black_alpha"
            android:gravity="center_vertical|right"
            android:textColor="@android:color/darker_gray"
            android:textSize="12dip" />
    </FrameLayout>
</LinearLayout>