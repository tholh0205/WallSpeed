<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/min_categories_home_item_height"
    android:orientation="horizontal">

    <com.wallspeed.widgets.RatioImageView
        android:id="@+id/img_newest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:fadeDuration="1000"
        fresco:placeholderImage="@drawable/default_image"
        fresco:pressedStateOverlayImage="@drawable/pressed_state_overlay"
        fresco:progressBarAutoRotateInterval="1000"
        fresco:progressBarImage="@drawable/app_icon" />

    <TextView
        android:id="@+id/newest_title"
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:layout_alignBottom="@id/img_newest"
        android:background="@color/black_alpha"
        android:gravity="center_vertical|right"
        android:textColor="@android:color/darker_gray"
        android:textSize="12dip" />
</RelativeLayout>